<component name = "HomeScene" extends = "OverhangPanelSetScene" >
  <interface>
    <field id = "run" type="int" onChange="runThis"/>
  </interface>

  <script type="text/brightscript" uri="pkg:/source/adbmobile.brs" />
  <script type = "text/brightscript" >

    <![CDATA[

    sub init()            
      runselectedexample()
    end sub

    sub runThis()
      m.currentexample.start = m.currentexample.start + 1
    end sub

    sub runselectedexample()
      m.currentexample = createObject("roSGNode", "VideoExample")
      m.top.appendChild(m.currentexample)
      m.currentexample.setFocus(true)
    end sub

    ]]>

  </script>

</component>
